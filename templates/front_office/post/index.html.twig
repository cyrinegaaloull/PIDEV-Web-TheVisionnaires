{% extends 'front_office/base-front-office.html.twig' %}

{% block title %}Post Index{% endblock %}

{% block body %}
    <style>
        /* Hero Section Styling */
        .hero-section {
            background-image: url('{{ asset('assets/front_office/images/Web-Bg.jpg') }}');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
            position: relative;
            margin-bottom: 50px;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.5);
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: white;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
        }

        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 30px;
            color: white;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

        /* Posts Styling */
        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(8px);
            border-radius: 16px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(220, 220, 220, 0.6);
            padding: 20px;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: transform 0.2s ease;
        }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
            color: #333;
        }

        .card-category {
            font-size: 0.9rem;
            color: #666;
            text-align: center;
            margin-bottom: 12px;
        }

        .card-content {
            text-align: center;
            flex-grow: 1;
            margin-bottom: 15px;
            color: #555;
            line-height: 1.5;
        }

        .card-actions {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .posts-container {
            padding: 0 20px;
        }

        .search-form {
            max-width: 500px;
        }

        .action-buttons {
            margin-bottom: 30px;
        }
    </style>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="container hero-content">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="hero-title">DÃ©couvrez votre Fil social</h1>
                    <p class="hero-subtitle">AccÃ©dez aux meilleures adresses, services d'urgence, Ã©vÃ©nements et plus encore en un seul clic.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Posts Section -->
    <div class="container posts-container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Action Buttons -->
                <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3 action-buttons">
                    {# {% if user %} #}
                        <a href="{{ path('app_post_new') }}" class="btn btn-success px-4 py-2">
                            <i class="fa fa-plus mr-2"></i>Add Post
                        </a>
                    {# {% endif %} #}

                    <form method="get" action="" class="d-flex gap-2 search-form">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Search posts...">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                            <a href="{{ path('app_post_index') }}" class="btn btn-secondary">
                                <i class="fa fa-refresh"></i>
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Posts Grid -->
                <div class="row">
                    {% for post in posts %}
                        <div class="col-md-4 d-flex mb-4">
                            <div class="glass-card w-100">
                                <div>
                                    <div class="card-title">{{ post.title }}</div>
                                    <div class="card-category">
                                        <span class="badge bg-primary">ðŸ“‚ {{ post.category }}</span>
                                    </div>
                                    <div class="card-content">{{ post.content|length > 100 ? post.content|slice(0, 100) ~ '...' : post.content }}</div>
                                </div>
                                <div class="card-actions">
                                    <a href="{{ path('app_post_show', {'postId': post.postId}) }}" class="btn btn-outline-info btn-sm">
                                        <i class="fa fa-eye mr-1"></i> View
                                    </a>
                                    {# {% if user %} #}
                                        <a href="{{ path('app_post_edit', {'postId': post.postId}) }}" class="btn btn-outline-warning btn-sm">
                                            <i class="fa fa-edit mr-1"></i> Edit
                                        </a>
                                    {# {% endif %} #}
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-info text-center py-4">
                                <i class="fa fa-info-circle fa-2x mb-3"></i>
                                <h4>No posts available</h4>
                                <p class="mb-0">Be the first to create a post!</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}