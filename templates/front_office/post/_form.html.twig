{{ form_start(form) }}

<div class="mb-4">
    {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    {% if form.title.vars.errors|length > 0 %}
        <div class="invalid-feedback">
            {{ form_errors(form.title) }}
        </div>
    {% endif %}
</div>

<div class="mb-4">
    {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.content, {'attr': {'rows': 5, 'class': 'form-control'}}) }}
    {% if form.content.vars.errors|length > 0 %}
        <div class="invalid-feedback">
            {{ form_errors(form.content) }}
        </div>
    {% endif %}
</div>

<div class="mb-4">
    {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
    {% if form.category.vars.errors|length > 0 %}
        <div class="invalid-feedback">
            {{ form_errors(form.category) }}
        </div>
    {% endif %}
</div>

<div class="d-flex justify-content-between mt-4">
    <a href="{{ path('app_post_index') }}" class="btn btn-secondary">← Retour à la liste</a>
    <button type="submit" class="btn btn-primary">{{ button_label|default('Publier') }}</button>
</div>

{{ form_end(form) }}