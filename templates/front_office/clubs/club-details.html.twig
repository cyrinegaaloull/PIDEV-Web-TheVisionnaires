{% block javascripts %}
{{ parent() }}
<script>
    
    // Handle tab navigation via URL hash
    if (window.location.hash) {
      $('#clubTabs a[href="' + window.location.hash + '"]').tab('show');
    }
    
    // Update URL hash when tab changes
    $('#clubTabs a').on('click', function (e) {
      history.pushState(null, null, $(this).attr('href'));
    });
</script>

<script>
console.log("Join Club script loaded");
document.addEventListener('DOMContentLoaded', function () {
  const joinBtn = document.getElementById('join-club-btn');
  if (joinBtn) {
    joinBtn.addEventListener('click', function () {
      const clubId = this.dataset.clubId;

      fetch('/join-club/' + clubId, {
        method: 'POST',
        headers: {
          'X-Requested-With': 'XMLHttpRequest',
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({})
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          this.textContent = 'Demande envoyée';
          this.classList.add('btn-success');
          this.classList.remove('btn-info');
          this.disabled = true;
          
          // ✅ Show Materio toast
          const toastEl = document.getElementById('successToast');
          const toast = new bootstrap.Toast(toastEl);
          toast.show();
        } else {
          alert(data.message || 'Une erreur est survenue.');
        }
      });
    });
  }

  const contactForm = document.querySelector('.contact-form');
if (contactForm) {
  contactForm.addEventListener('submit', function (e) {
    e.preventDefault();

    console.log("📤 Contact form submitted"); // DEBUG: Tap detected

    const inputs = contactForm.querySelectorAll('input, textarea');
    const data = {};

    inputs.forEach(input => {
      data[input.placeholder.toLowerCase()] = input.value;
    });

    fetch('/clubs/contact/{{ club.clubid }}', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      },
      body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Reset and show success toast
        contactForm.reset();
        const toastEl = document.getElementById('successToast');
        if (toastEl) new bootstrap.Toast(toastEl).show();
      } else {
        alert(data.message || 'Erreur lors de l\'envoi du message.');
      }
    });
  });
}
});
</script>

{% if app.session.get('show_contact_toast') %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const toastEl = document.getElementById('contactToast');
    if (toastEl) {
      const toast = new bootstrap.Toast(toastEl);
      toast.show();
    }
  });
</script>
{% do app.session.remove('show_contact_toast') %}
{% endif %}

{% endblock %}