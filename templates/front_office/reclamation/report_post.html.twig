{% extends 'front_office/base-front-office.html.twig' %}

{% block title %}Signaler une publication{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="container hero-content">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="hero-title">Signaler une publication</h1>
                    <p class="hero-subtitle">Décrivez le problème que vous avez rencontré avec cette publication.</p>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Hero Section Styling */
        .hero-section {
            background-image: url('{{ asset('assets/front_office/images/Web-Bg.jpg') }}');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
            position: relative;
            margin-bottom: 50px;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: white;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
        }

        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 30px;
            color: white;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }

        /* Form Validation Error Styling */
        .form-control.is-invalid {
            border: 2px solid red !important; /* Red border for invalid fields */
            background-color: #ffebee; /* Light red background */
        }

        .invalid-feedback {
            color: red; /* Red text for error messages */
            font-size: 0.9em;
            margin-top: 5px;
        }

        /* Optional: Add a red circle/icon for invalid fields */
        .is-invalid::after {
            content: "❌"; /* Red X icon */
            color: red;
            margin-left: 10px;
            font-size: 1.2em;
        }

        /* Glass Card Styling */
        .glass-card {
            background: rgba(255, 255, 255, 0.8); /* Semi-transparent white */
            backdrop-filter: blur(10px); /* Frosted glass effect */
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 30px;
        }
    </style>

    <!-- Report Form Section -->
    <div class="container posts-container mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="glass-card">
                    <h2>Signaler une publication</h2>
                    <form method="post">
                        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.content, 'Description du problème', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                            {{ form_errors(form.content) }}
                        </div>
                        <button type="submit" class="btn btn-danger">Soumettre le signalement</button>
                        {{ form_end(form) }}
                        <a href="{{ path('app_post_show', {'postId': postId}) }}" class="btn btn-secondary mt-3">Annuler</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}