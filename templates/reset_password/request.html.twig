{# templates/reset_password/request.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Reset your password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {# Adjust the href to point to your actual CSS file in public/ #}
    <link rel="stylesheet" href="{{ asset('styles.css') }}">
</head>
<body>
    <div class="container" style="max-width: 500px; margin: 2rem auto;">
        <div class="card" style="padding: 2rem; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border-radius: 8px;">
            <h2 style="margin-bottom: 1rem; text-align: center;">Reset Your Password</h2>
            <p>Please enter the email address associated with your account. You will receive a link to create a new password via email.</p>

            {{ form_start(requestForm, {
                'action': path('app_forgot_password_request'),
                'attr': {'novalidate': 'novalidate'}
            }) }}
                {{ form_row(requestForm.email, {
                    'label': 'Email address',
                    'attr': {
                        'placeholder': 'you@example.com',
                        'class': 'form-control mb-3',
                        'autocomplete': 'email',
                        'autofocus': true
                    }
                }) }}

                <button type="submit" class="btn btn-primary" style="width: 100%; padding: 0.75rem; font-size: 1rem;">
                    Send reset link
                </button>
            {{ form_end(requestForm) }}

            <div style="margin-top: 1rem; text-align: center;">
                <a href="{{ path('app_login') }}">Back to login</a>
            </div>
        </div>
    </div>
</body>
</html>
