{# templates/reset_password/request.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reset your password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4361ee;
            --primary-dark: #3a56d4;
            --text-color: #333;
            --light-gray: #f8f9fa;
            --border-color: #e9ecef;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: var(--light-gray);
            color: var(--text-color);
            line-height: 1.6;
        }
        
        .container {
            width: 100%;
            max-width: 500px;
            margin: 3rem auto;
            padding: 0 1rem;
        }
        
        .card {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            border: 1px solid var(--border-color);
        }
        
        .card-header {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            padding: 1.5rem;
            text-align: center;
        }
        
        .card-header h2 {
            font-weight: 600;
            font-size: 1.5rem;
            margin: 0;
        }
        
        .card-body {
            padding: 2rem;
        }
        
        p {
            margin-bottom: 1.5rem;
            color: #555;
            text-align: center;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #444;
        }
        
        .form-control {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
        }
        
        .btn {
            display: inline-block;
            padding: 0.875rem 1.5rem;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            cursor: pointer;
            text-align: center;
            font-size: 1rem;
            width: 100%;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            color: white;
            border: none;
        }
        
        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
        }
        
        .text-center {
            text-align: center;
        }
        
        .mt-4 {
            margin-top: 1.5rem;
        }
        
        .back-link {
            display: inline-block;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        
        .back-link:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }
        
        .icon-container {
            text-align: center;
            margin-bottom: 1.5rem;
        }
        
        .icon {
            font-size: 3rem;
            color: var(--primary-color);
        }

        @media (max-width: 576px) {
            .container {
                margin: 1rem auto;
            }
            
            .card-header {
                padding: 1rem;
            }
            
            .card-body {
                padding: 1.5rem 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Reset Your Password</h2>
            </div>
            <div class="card-body">
                <div class="icon-container">
                    <i class="fas fa-key icon"></i>
                </div>
                <p>Please enter the email address associated with your account. You will receive a link to create a new password via email.</p>

                {{ form_start(requestForm, {
                    'action': path('app_forgot_password_request'),
                    'attr': {'novalidate': 'novalidate'}
                }) }}
                <div class="form-group">
                    {{ form_label(requestForm.email, 'Email address', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(requestForm.email, {
                        'attr': {
                            'placeholder': 'you@example.com',
                            'class': 'form-control',
                            'autocomplete': 'email',
                            'autofocus': true
                        }
                    }) }}
                    {{ form_errors(requestForm.email) }}
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane"></i> Send Reset Link
                </button>
                {{ form_end(requestForm) }}

                <div class="text-center mt-4">
                    <a href="{{ path('app_login') }}" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to login
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>