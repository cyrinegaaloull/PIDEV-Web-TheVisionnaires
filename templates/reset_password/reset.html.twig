<!DOCTYPE html>
<html>
<head>
    <title>Reset your password</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <h3>Reset your password</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(resetForm) }}
                            {{ form_row(resetForm.plainPassword.first, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Enter your new password'}}) }}
                            {{ form_row(resetForm.plainPassword.second, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Confirm your new password'}}) }}
                            <button type="submit" class="btn btn-primary">Reset password</button>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
