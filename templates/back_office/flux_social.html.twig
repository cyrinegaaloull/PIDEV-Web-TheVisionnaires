{% extends 'back_office/base-back-office.html.twig' %}

{% block body %}
  <div class="row gy-4">
    <!-- Page Header -->
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="mb-0">Flux Social</h5>
          <p class="text-muted">Liste des publications disponibles sur la plateforme.</p>
        </div>
      </div>
    </div>

    <!-- Posts List -->
    {% if posts|length > 0 %}
      {% for post in posts %}
        <div class="col-md-6 col-xl-4">
          <div class="card">
            <div class="card-body">
              <h6 class="mb-2">{{ post.title }}</h6>
              <p class="text-muted small">{{ post.content }}</p> {# Removed the truncate filter #}
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Publié dans: {{ post.category }}</small>
                <a href="{{ path('admin_post_details', {'postId': post.postId}) }}" class="btn btn-sm btn-primary">Détails</a>              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <div class="col-12">
        <div class="card">
          <div class="card-body text-center">
            <p class="mb-0">Aucune publication disponible.</p>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
{% endblock %}