                color: white;
            }
            .flash-message.warning {
                background-color: #ff9800;
                color: white;
            }

            /* --- Modal CSS --- */
            .modal {
                display: none;
                position: fixed;
                z-index: 2000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
                background-color: rgba(0, 0, 0, 0.5);
            }
            .modal-content {
                background-color: #fefefe;
